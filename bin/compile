#!/usr/bin/env bash
set -o errexit
set -o nounset

URL="https://nodejs.org/dist/v4.2.3/node-v4.2.3-linux-x64.tar.gz"
TMP=node

mkdir -p $TMP
curl $URL -s -o - | tar xzf - -C $TMP
chmod +x $TMP/node-v4.2.3-linux-x64/bin/*

PATH=$TMP/node-v4.2.3-linux-x64/bin:$PATH

cd $1/src/server/
$TMP/node-v4.2.3-linux-x64/bin/npm install