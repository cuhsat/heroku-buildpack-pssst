#!/usr/bin/env bash
set -o errexit
set -o nounset

BUILD_DIR=$1
CACHE_DIR=$2

VER="v4.2.3"
URL="https://nodejs.org/dist/$VER/node-$VER-linux-x64.tar.gz"

curl $URL -s -o - | tar xzf -

export PATH=$PATH:$BUILD_DIR/node-$VER-linux-x64/bin

mkdir .profile.d/
echo "PATH=$PATH:$HOME/node-$VER-linux-x64/bin" > .profile.d/path.sh

cd $1/src/server/
npm install
